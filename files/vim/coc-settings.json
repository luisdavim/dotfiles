{
  "languageserver": {
    "terraform-lsp": {
      // "command": "terraform-lsp",
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "go.enable": true,
  "go.checkForUpdates": "install",
  "go.goplsUseDaemon": true,
  "go.goplsOptions": {
    "staticcheck": true,
    "usePlaceholders": true,
    "completeUnimported": true,
    "completionDocumentation": true,
    "deepCompletion": true,
    "fuzzyMatching": true
  },
  "python.jediEnabled": true,
  "explorer.quitOnOpen": true,
  "explorer.toggle": true,
  "explorer.icon.enableVimDevicons":true,
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],
  // "codeLens.enable": true,
  // "diagnostic.virtualText": true,
  // "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "\u2718",
  "diagnostic.warningSign": "\u26A0",
  // "coc.preferences.snippetStatusText": "\u2710",
  // "prettier.statusItemText": "\u272C",
  "diagnostic.infoSign": "\u2690",
  "suggest.timeout": 5000,
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.maxPreviewWidth": 35,
  "suggest.detailMaxLength": 100,
  "suggest.detailField": "preview",
  "suggest.removeDuplicateItems": true,
  "suggest.snippetIndicator": " \ue796",
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  // "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "prettier.printWidth": 160,
  "coc.preferences.messageLevel": "error",
  "coc.preferences.highlightTimeout": 500,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "yaml",
    "javascriptreact",
    "typescript.tsx",
    "graphql",
    "go"
  ],
  "git.enableGlobalStatus": false,
  "git.addGBlameToVirtualText": true,
  "highlight.colors.enable": false,
  "markdownlint.config": {
    "default": true,
    "line-length": false
  }
}
